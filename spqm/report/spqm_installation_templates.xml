<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="quote_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="installation">
        <div class="page">
          <h2>Solar panel installaion quote</h2>
          <p>The cost of buying electricity today is <t t-out="installation.elec_price_buy_today" /></p>
          <table>
            <thead>
              <tr>
                <th>year</th>
                <th>elec production</th>
                <th>elec price buy</th>
                <th>elec price sell</th>
              </tr>
            </thead>
            <tbody>
              <t t-set="yearly_data" t-value="installation.get_yearly_data()" />
              <tr t-foreach="yearly_data" t-as="current">
                <td>
                  <t t-out="current.year" />
                </td>
                <td>
                  <t t-out="current.production" />
                </td>
                <td>
                  <t t-out="current.elec_price_buy" />
                </td>
                <td>
                  <t t-out="current.elec_price_sell" />
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
</odoo>
