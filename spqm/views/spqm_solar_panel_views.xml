<odoo>
  <record id="spqm_solar_panel_action" model="ir.actions.act_window">
    <field name="name">solar_panels</field>
    <field name="res_model">spqm.solar_panel</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="spqm_solar_panel_view_tree" model="ir.ui.view">
    <field name="name">spqm.solar_panel.tree</field>
    <field name="model">spqm.solar_panel</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="price" />
        <field name="peak_power" />
      </tree>
    </field>
  </record>

  <record id="spqm_solar_panel_view_form" model="ir.ui.view">
    <field name="name">spqm.solar_panel.form</field>
    <field name="model">spqm.solar_panel</field>
    <field name="arch" type="xml">
      <form>
        <group>
            <field name="name" />
            <field name="price" />
            <field name="peak_power" />
        </group>
      </form>
    </field>
  </record>
</odoo>
