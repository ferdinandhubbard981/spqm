<odoo>
  <record id="spqm_installation_zone_view_tree" model="ir.ui.view">
    <field name="name">spqm.installation.zone.tree</field>
    <field name="model">spqm.installation.zone</field>
    <field name="arch" type="xml">
      <tree>
        <field name="peak_power" />
        <field name="loss" />
        <field name="slope" />
        <field name="azimuth" />
        <field name="e_m_average" />
        <field name="e_y_total" />
      </tree>
    </field>
  </record>

  <record id="spqm_installation_zone_view_form" model="ir.ui.view">
    <field name="name">spqm.installation.zone.form</field>
    <field name="model">spqm.installation.zone</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="peak_power" />
          <field name="loss" />
          <field name="slope" />
          <field name="azimuth" />
          <field name="e_m_average" />
          <field name="e_y_total" />
        </group>
      </form>
    </field>
  </record>
</odoo>
